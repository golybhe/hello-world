<h1> Make your review! </h1>
 <% if @review.errors.any? %>
 	<ul>
 		<% @review.errors.full_messages.each do |error_msg| %>
 			<li> <%= error_msg %> </li>
 		<% end%>
	</ul>
<% end %>



		<%= form_for [@film, @review] do |g| %>
		<%= g.label :description %>
		<%= g.text_field :description %>
		<%= g.label :mail %>
		<%= g.text_field :reviewer %>
		<%=g.submit "Save your description" %>
			
		<% end %>

